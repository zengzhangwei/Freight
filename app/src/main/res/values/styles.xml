<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AddressTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RoleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_title_image_style">
        <item name="android:layout_width">@dimen/dp_32</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MainTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SendGoodsTextStyle">
        <item name="android:layout_width">220px</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:textColor">@color/text_black_cc</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="TextStyle_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/icon_right</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:textColor">@color/hint_color</item>-->
    </style>

    <style name="white_tv">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">86px</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:drawableRight">@mipmap/icon_right</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="TextCarTypeDialogStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="SimpleTextViewType">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:background">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

    <style name="ButtonThemeGreen">
        <item name="colorButtonNormal">@color/color_green</item>
        <item name="colorControlHighlight">#22000000</item>
    </style>

    <style name="ButtonThemeGrey">
        <item name="colorButtonNormal">@color/text_greyDark</item>
        <item name="colorControlHighlight">#22000000</item>
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
        <!--<item name="actionBarTheme">@style/actionBarTheme</item>-->
        <!--<item name="actionBarPopupTheme">@style/actionBarPopupTheme</item>-->
    </style>
    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
