<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zl.freight.ui.activity.MyNewsActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_layout" />

        <android.support.design.widget.TabLayout
            android:id="@+id/my_new_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/blue"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextColor="@color/text_black_cc"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/my_new_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </com.zhy.autolayout.AutoLinearLayout>

    <RelativeLayout
        android:id="@+id/my_news_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
