<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/RegisterTextStyle"
            android:text="真实姓名" />

        <EditText
            android:id="@+id/et_input_name"
            style="@style/RegisterEtStyle"
            android:hint="请输入真实姓名"
            android:maxLength="20" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView style="@style/LineTextStyle" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/RegisterTextStyle"
            android:text="身份证号" />

        <EditText
            android:id="@+id/et_person_code"
            style="@style/RegisterEtStyle"
            android:hint="请输入身份证号"
            android:maxLength="18" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView style="@style/LineTextStyle" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/RegisterTextStyle"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_input_phone"
            style="@style/RegisterEtStyle"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView style="@style/LineTextStyle" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            style="@style/RegisterTextStyle"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_input_code"
            android:layout_width="330px"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:paddingLeft="@dimen/dp_32"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="175px"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/bg_blue_round"
            android:gravity="center"
            android:text="@string/send_code"
            android:textColor="@color/white"
            android:textSize="22px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView style="@style/LineTextStyle" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/RegisterTextStyle"
            android:text="密码" />

        <EditText
            android:id="@+id/et_input_password"
            style="@style/RegisterEtStyle"
            android:hint="请输入密码(6位纯数字密码)"
            android:inputType="numberPassword"
            android:maxLength="6" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView style="@style/LineTextStyle" />
</com.zhy.autolayout.AutoLinearLayout>
