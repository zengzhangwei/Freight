<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.zl.freight.ui.activity.LookGoodsLocationActivity">

    <include layout="@layout/title_layout" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/lda_map"
        android:layout_width="match_parent"
        android:layout_height="450px"></com.baidu.mapapi.map.MapView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_16"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="司机历史位置"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />

            <ListView
                android:id="@+id/driver_location_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white"></ListView>

        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v7.widget.CardView>

</com.zhy.autolayout.AutoLinearLayout>
