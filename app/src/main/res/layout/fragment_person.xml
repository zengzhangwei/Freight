<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_margin="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:src="@mipmap/icon_touxiang" />

                <TextView
                    android:id="@+id/tv_shoujihao"
                    style="@style/white_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/dp_18"
                    android:layout_toRightOf="@id/user_icon"
                    android:text="张磊" />

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:src="@mipmap/icon_right" />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.design.widget.AppBarLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_chakangengduo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:padding="20px" />

            <TextView
                style="@style/TextStyle"
                android:layout_gravity="center_vertical"
                android:text="我的订单" />

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_caijijilu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:padding="20px" />

            <TextView
                style="@style/TextStyle"
                android:layout_gravity="center_vertical"
                android:text="采集记录" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_fakaliebiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:padding="20px" />

            <TextView
                style="@style/TextStyle"
                android:layout_gravity="center_vertical"
                android:text="发卡列表" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_updatePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:padding="20px" />

            <TextView
                style="@style/TextStyle"
                android:layout_gravity="center_vertical"
                android:text="修改登录密码" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="140px"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16" />

</com.zhy.autolayout.AutoLinearLayout>
