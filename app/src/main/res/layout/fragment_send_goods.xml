<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zl.freight.ui.fragment.SendGoodsFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_depart_tag"
            android:text="@string/depart_place" />

        <TextView
            style="@style/TextStyle_right"
            android:hint="@string/touch_choose" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/light_grey" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_arrive_tag"
            android:hint="@string/destination" />

        <TextView
            style="@style/TextStyle_right"
            android:hint="@string/touch_choose" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_color" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_vehicle"
            android:text="@string/car_length_type" />

        <TextView
            style="@style/TextStyle_right"
            android:hint="@string/touch_choose" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/light_grey" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_cargo_type"
            android:text="@string/goods_type" />

        <TextView
            style="@style/TextStyle_right"
            android:hint="@string/touch_choose" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/light_grey" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_cargo_weight"
            android:text="@string/goods_weight" />

        <EditText
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="@dimen/dp_14"
            android:textCursorDrawable="@null"
            android:hint="@string/touch_output" />

        <TextView
            android:layout_width="0.8dp"
            android:background="@color/light_grey"
            android:layout_height="@dimen/dp_36" />

        <TextView
            android:id="@+id/tv_tonne"
            android:layout_width="@dimen/dp_48"
            android:background="@drawable/text_bg_selector"
            android:textColor="@color/text_selector_color"
            android:text="@string/tonne"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_height="@dimen/dp_32" />

        <TextView
            android:id="@+id/tv_square"
            android:layout_width="@dimen/dp_48"
            android:background="@drawable/text_bg_selector"
            android:textColor="@color/text_selector_color"
            android:text="@string/square"
            android:gravity="center"
            android:layout_height="@dimen/dp_32" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_color" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_cargo_price"
            android:text="@string/freight_money" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="460px"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/touch_output"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yuan"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_14"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/light_grey" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_cargo_load_time"
            android:text="@string/loading_time" />

        <TextView
            style="@style/TextStyle_right"
            android:hint="@string/touch_choose" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/light_grey" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical">

        <TextView
            style="@style/SendGoodsTextStyle"
            android:drawableLeft="@mipmap/icon_cargo_remark"
            android:text="@string/content" />

        <TextView
            style="@style/TextStyle_right"
            android:hint="装卸方式、付款方式、备注" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@color/light_grey" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">

        <TextView
            android:layout_width="520px"
            android:layout_height="@dimen/dp_48"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:text="@string/enture_publish"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_blue_round" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
