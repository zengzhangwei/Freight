<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zl.freight.ui.activity.RoleChooseActivity">

    <ImageView
        android:id="@+id/rc_iv_finish"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_margin="@dimen/dp_8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp_4"
        app:srcCompat="@drawable/ic_clear" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:id="@+id/rc_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:layout_width="140px"
                    android:layout_height="140px"
                    app:srcCompat="@drawable/ic_driver" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/driver_in"
                    android:textColor="@color/text_black_cc"
                    android:textSize="@dimen/dp_18" />
            </com.zhy.autolayout.AutoLinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rc_goods_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_toRightOf="@id/rc_driver">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:layout_width="140px"
                    android:layout_height="140px"
                    app:srcCompat="@drawable/ic_goods_master" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/goods_master_in"
                    android:textColor="@color/text_black_cc"
                    android:textSize="@dimen/dp_18" />
            </com.zhy.autolayout.AutoLinearLayout>

        </android.support.v7.widget.CardView>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
